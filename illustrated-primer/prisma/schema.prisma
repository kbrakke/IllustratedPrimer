datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id    String @id @default(cuid())
  email String @unique

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  password Password?
}

model Page {
  id         String @id @default(cuid())
  story      Story  @relation(fields: [storyTitle], references: [title], onDelete: Cascade, onUpdate: Cascade)
  storyTitle String
  number     Int

  prompt     String
  completion String
  image      String
  pageName   String

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([storyTitle, number], name: "page_number")
}

model Story {
  id          String   @id @default(cuid())
  title       String   @unique
  author      String
  description String
  image       String
  pages       Page[]
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Password {
  hash String

  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade, onUpdate: Cascade)
  userId String @unique
}

model sttQuestion {
  id        String   @id @default(cuid())
  question  String
  answer    String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
